doctype html
html(lang="en")
  head
    title DEV-LAB5
    script(type='module').
        async function getAllMessages(){
            return fetch("/api/v1/messages").then(r => r.json())
        }

        let list = document.getElementById("myList")
        let messages = (await getAllMessages()).data.messages
        
        for(let i = 0; i < messages.length; i++){
            console.log(i, messages[i])

            let messageElement = document.createElement("li")
            messageElement.innerText = messages[i].user + ": " + messages[i].message
            list.appendChild(messageElement)
        }

  body
    h1 Alle berichten
    ul#myList